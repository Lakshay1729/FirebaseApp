<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="statusBarScrim">@color/light_blue_400</item>
    </style>

    <style name="Widget.AppTheme.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerRadius">@dimen/cardview_default_radius</item>
        <item name="cornerFamily">rounded</item>
       

    </style>
    <style name="chatBox" parent="">
        <item name="cornerSize">20%</item>
        <item name="cornerRadius">@dimen/cardview_default_radius</item>
        <item name="cornerFamily">rounded</item>
        <item name="backgroundColor"> #FFFF</item>
    </style>

    <style name="userImageView" parent="">

        <item name="cornerRadius">@dimen/cardview_default_radius</item>
        <item name="android:bottomLeftRadius">
            10dp
        </item>

    </style>

    <style name="profileImage">
        <item name="cornerFamily">cut
        </item>
        <item name="backgroundColor">
            @android:color/transparent
        </item>
        <item name="cornerSize">29%</item>
    </style>
    <!--    <style name="AppTheme.Splash">-->
    <!--        <item name="android:windowBackground">@drawable/splash_screen</item>-->
    <!--    </style>-->

</resources>
